<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.HomeActivity"
    tools:showIn="@layout/activity_home">

    <io.github.sds100.keymapper.view.ServiceStatusLayout
        android:id="@+id/accessibilityServiceStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:disabledText="@string/error_accessibility_service_disabled"
        app:enabledText="@string/error_accessibility_service_enabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.github.sds100.keymapper.view.ServiceStatusLayout
        android:id="@+id/imeServiceStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:disabledText="@string/error_ime_service_disabled"
        app:enabledText="@string/error_ime_service_enabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accessibilityServiceStatusLayout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imeServiceStatusLayout"
        app:tabGravity="fill"
        app:tabMode="scrollable" />

    <io.github.sds100.keymapper.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>